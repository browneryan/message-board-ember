<div class="col-sm-12">
  {{no-answer question}}
  {{#link-to 'question' question.id}}
    <h5>Q: {{question.inquiry}}</h5>
    <p>By: {{question.author}}</p>
  {{/link-to}}
  <hr/>
  {{update-question question=question update="update"}}
  <div class="delete-question">
    <button class="waves-effect waves-green btn deleteBtn" {{action 'delete' question}}>Delete</button>
  </div>
</div>
